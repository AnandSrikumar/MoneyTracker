<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.removeBank.RemoveBankFragment">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/one"
        android:textSize="22sp"
        android:textColor="@color/primaryGreen"
        android:textStyle="bold"
        android:text="@string/remove_bank"
        />
    <LinearLayout
        android:id="@+id/checkbox_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/two"
        android:orientation="vertical"
        android:background="@drawable/full_border"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.45"
        />
    <Button
        android:id="@+id/remove"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/checkbox_id"
        app:layout_constraintTop_toBottomOf="@id/three"
        android:background="@drawable/green_button"
        app:layout_constraintWidth_percent="0.29"
        app:layout_constraintHeight_percent="0.05"
        android:text="@string/remove_bank"
        android:textColor="@color/white"

        />
    <Button
        android:id="@+id/select_all"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="@id/checkbox_id"
        app:layout_constraintTop_toBottomOf="@id/three"
        android:background="@drawable/green_button"
        app:layout_constraintWidth_percent="0.29"
        app:layout_constraintHeight_percent="0.05"
        android:text="@string/select_all"
        android:textColor="@color/white"
        />
</androidx.constraintlayout.widget.ConstraintLayout>